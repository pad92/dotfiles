#    GNU General Public License for more details.
#
#    You should have received a copy of the GNU General Public License
#    along with this program.  If not, see <http://www.gnu.org/licenses/>.

if vim --version | grep -qs +folding 2>&1; then
	$HOME/.byobu/usr/bin/byobu-status --detail | vim -c "set foldmethod=indent" -c "set foldminlines=0" -c "set foldnestmax=1"  -c "set foldcolumn=2" -R -
elif which sensible-pager >/dev/null 2>&1; then
	$HOME/.byobu/usr/bin/byobu-status --detail | sensible-pager
else
	$HOME/.byobu/usr/bin/byobu-status --detail | less
fi
