# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[_*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = LF

[COMMIT_EDITMSG]
max_line_length = 0
