# EditorConfig is awesome: https://EditorConfig.org
# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
# like -i=4
indent_style = space
indent_size = 2

# --language-variant
shell_variant      = posix
binary_next_line   = true
# --case-indent
switch_case_indent = true
space_redirects    = true
keep_padding       = true
# --func-next-line
function_next_line = true

[*.py]
indent_size = 4

[*.{tf,tfvars}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[_*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = LF

[COMMIT_EDITMSG]
max_line_length = 0
