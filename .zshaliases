# Arch
## remove orphans
if [ $(command -v pacman) ] && [ $(command -v yay) ]; then
  function clean_arch {
    ORPHAN=$(pacman -Qtdq)

    if [ -n "${ORPHAN}" ]; then
      echo "Remove orphans"
      sudo pacman -Rns $(pacman -Qtdq)
    fi
    yay -Scc --noconfirm
    sudo find /etc -regextype posix-extended -regex ".*\.pac(new|save|orig)$" 2> /dev/null
    paccache -ruk0
    paccache -rk1
  }
fi

