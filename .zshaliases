## get fastest mirrors
if [ $(command -v reflector) ]; then
  alias mirror="sudo reflector -p https -c FR --latest 20 --fastest 20              --verbose --save /etc/pacman.d/mirrorlist"
  alias mirrord="sudo reflector -p https -c FR --latest 20 --fastest 20 --sort delay --verbose --save /etc/pacman.d/mirrorlist"
  alias mirrors="sudo reflector -p https -c FR --latest 20 --fastest 20 --sort score --verbose --save /etc/pacman.d/mirrorlist"
  alias mirrora="sudo reflector -p https -c FR --latest 20 --fastest 20 --sort age   --verbose --save /etc/pacman.d/mirrorlist"
fi

## Update
function arch_update {
    yay -Syu --devel
    clean_arch
    if [ $(command -v flatpak) ]; then
        flatpak update -y
        flatpak uninstall --unused -y
    fi
}

