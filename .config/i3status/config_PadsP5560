general {
  colors   = true
    interval = 5
    color_good = "#B2CCD6"
    color_degraded = "#efb993"
    color_bad = "#F07178"
}

order += "disk /home"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "tztime date"

battery all {
  format = "%status %percentage %remaining %emptytime"
    format_down                   = ""
    status_bat                    = "ï‰"
    status_chr                    = "ïƒ§"
    status_full                   = "ï‰€"
    low_threshold                 = 15
    threshold_type                = percentage
    hide_seconds                  = true
# Show percentage as interger
    integer_battery_capacity      = true
    path                          = /sys/class/power_supply/BAT%d/uevent
}

