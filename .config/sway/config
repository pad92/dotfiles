bar {
    swaybar_command waybar
}

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Your preferred terminal emulator
set $term termite

# Your preferred application launcher
set $menu "rofi -i -modi drun,run,window -show drun"

# Your wallpaper
set $wallpaper ${HOME}/.dotfiles/wallpapers/milky_way.jpg

# Setting values in gsettings
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Numix'
    gsettings set $gnome-schema icon-theme 'Numix'
}

# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.
exec swayidle -w \
        timeout 300 'swaylock -f -c 333333 -s fill -i $wallpaper' \
        timeout 600 'swaymsg "output * dpms off"' \
             resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -f -c 333333 -s fill -i $wallpaper'

include config.d/*

## On login
exec --no-startup-id xrdb $HOME/.Xresources
exec redshift
exec mako
exec networkd-notify
