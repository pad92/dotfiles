bar {
    swaybar_command waybar
}

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Your preferred terminal emulator
set $term termite

# Your preferred application launcher
set $menu "rofi -i -modi drun,run,window -show drun"

# Your wallpaper
set $wallpaper ${HOME}/Pictures/wallpapers.jpg

# Setting values in gsettings
set $gnome-schema org.gnome.desktop.interface

exec_always {
    gsettings set $gnome-schema gtk-theme 'Flat-Remix-GTK-Darkest-Solid-NoBorder'
    gsettings set $gnome-schema icon-theme 'Flat-Remix-Dark'
    gsettings set org.gnome.shell.extensions.user-theme name 'Flat-Remix-Darkest'
}

include config.d/*

## On login
exec --no-startup-id xrdb ~/.Xresources
exec --no-startup-id redshift
exec --no-startup-id mako
